#!/usr/bin/env groovy
echo 'Hello there'
pipeline {
    agent any
    stages {
        stage('Stage 1') {
            steps {
                sh 'echo "Hello World"'
                sh '''
                    echo "Multiline shell steps works too"
                    ls -lah
                '''
                input 'Enter to continue'
            }
        }
        stage('Stage 2') {
            steps {
                echo 'Hello world!' 
            }
        }
    }
}
