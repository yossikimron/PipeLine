#!/usr/bin/env groovy
echo 'Hello there'
pipeline {
    parameters {
            string(name: 'TEST', defaultValue: '')
        }
    agent any
    stages {
        stage('Stage 1') {
            steps {
                sh 'echo "Hello World"'
                sh '''
                    echo "Multiline shell steps works too"
                    ls -lah
              
                '''
                env.TEST = "10"
                input 'Enter to continue'
            }
        }
        stage('Stage 2') {
            steps {
                echo 'Hello world!' 
                echo "${env.TEST}"
                input 'Enter to continue'
            }
        }
    }
}
